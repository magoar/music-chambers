<div class="container form-container bg-white p-4 border">
  <h3>Festival</h3>
    <div class= "pt-3">
      <%= simple_form_for(@festival) do |f| %>
        <%= f.input :name %>
        <%= f.input :location %>
        <%= f.input :start_date, :label => "Rehearsal Start Date" %>
        <%= f.input :end_date, :label => "Rehearsal End Date" %>
        <%= f.input :rehearsals_per_group %>
        <%= f.input :photo, as: :file %>
        <% if @festival.rehearsals.empty? %>
          <%= f.submit "Update", class: "btn btn-success" %>
        <% else %>
          <%= f.submit "Update", class: "btn btn-success", data: { turbo_confirm: "A schedule has already been created. By making changes, the schedule will be deleted. Do you want to proceed?"} %>
        <% end %>
      <% end %>
    </div>
</div>
