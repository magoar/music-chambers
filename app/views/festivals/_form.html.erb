<div class="container form-container bg-white p-4 border">
  <h3>Festival</h3>
    <div class= "pt-3">
      <%= simple_form_for(@festival) do |f| %>
        <%= f.input :name %>
        <%= f.input :location %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.input :slots_per_day %>
        <%= f.submit %>
      <% end %>
    </div>
</div>
