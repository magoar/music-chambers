

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "banner_photo.webp" %>);">
  <div class="container ps-4 pt-5">
    <h1>MusicChambers</h1>
    <br>
    <p>Organize chamber music festivals efficiently!</p>
    <p>Coordinate rehearsal schedules and rooms without conflict</p>
  </div>
</div>

<div class="container body">
  <h2 class="how">How it works:</h2>

  <div class="container cards home-cards p-5">

      <div class="card" >
        <i class="fa-solid fa-music"></i>
        <div class="card-body">
          <p class="card-text">Add your festival project</p>
          <p><%= @hello_world %></p>
        </div>
      </div>

      <div class="card" >
        <i class="fa-regular fa-pen-to-square "></i>
        <div class="card-body">
          <p class="card-text">Input infos: <br> Musicians, Groups, Rooms, Timeslots.</p>
        </div>
      </div>

      <div class="card" >
        <i class="fa-regular fa-calendar-check "></i>
        <div class="card-body">
          <p class="card-text"><strong>MusicChambers</strong> will configure a rehearsal plan accordingly!</p>
        </div>
      </div>

  </div>

  <%= link_to  festivals_path do %>
  <button class= "btn btn-primary start-btn">Start Now!</button>
  <% end %>
</div>
