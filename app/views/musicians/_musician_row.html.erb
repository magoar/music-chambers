<div data-controller="edit-musician" data-edit-musician-target="card">
  <div class="notification p-3">
    <div class="notification-content d-flex flex-column">
      <div class="row">
        <div class="col-5" >
            <h5 style= "margin: 0"><%= musician.name %> </h5>
          </div>
          <div class="col-3">
            <p><%= musician.instrument %></p>
          </div>
          <div class="col-4">
            <%musician.requirements.each do |requirement| %>
            <p><%= requirement.name %></p>
            <% end %>
          </div>
        </div>
    </div>

    <div class="notification-actions" data-edit-musician-target="actions">

      <a><i class="fas fa-pencil-alt" data-action="click->edit-musician#displayForm"></i></a>

      <%= link_to musician_path(musician), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
         <i class="far fa-trash-alt"></i>
      <% end %>
    </div>
  </div>
     <%= simple_form_for([@festival, musician], html: { class: "d-none p-3 bg-light mb-2", data: { edit_musician_target: "form", action: "submit->edit-musician#update" } }) do |f| %>
      <%= f.input :name %>
      <%= f.input :instrument %>
      <%= f.association :requirements, as: :check_boxes %>
      <%= f.submit "Update", class: "btn btn-success" %>
    <% end %>
</div>
