<div class="container form-container bg-white p-4 border">
  <h3>Add a Room</h3>
    <div class= "pt-3">
      <%= simple_form_for([@festival, @room]) do |f| %>
        <%= f.input :name %>
        <%= f.input :size %>
        <%= f.association :requirements, :label => "Facilities", as: :check_boxes  %>
        <%= f.submit "Save", class: "btn btn-success" %>
      <% end %>
    </div>
</div>
